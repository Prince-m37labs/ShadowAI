run = "bash run.sh"
modules = ["nodejs-20:v8-20230920-bd784b9", "python-3.12:v18-20230807-322e88b", "web", "bash"]
entrypoint = "run.sh"

[nix]
channel = "stable-24_05"

[env]
PYTHONPATH = "/home/runner/$REPL_SLUG/backend"
BACKEND_URL = "https://$REPL_SLUG.$REPL_OWNER.repl.co:8000"
NODE_ENV = "production"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true

[languages]
[languages.python]
pattern = "**/*.py"
syntax = "python"

[languages.javascript]
pattern = "**/*.{js,jsx,ts,tsx}"
syntax = "javascript"

[languages.json]
pattern = "**/*.json"
syntax = "json"

[languages.css]
pattern = "**/*.css"
syntax = "css"

[languages.html]
pattern = "**/*.html"
syntax = "html"

[deployment]
run = ["sh", "-c", "bash run.sh"]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000