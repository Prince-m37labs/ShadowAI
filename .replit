run = "bash run.sh"
entrypoint = "run.sh"

[nix]
channel = "stable-23_11"

[env]
PYTHONPATH = "/home/runner/workspace/backend"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true

[languages]
[languages.python]
pattern = "**/*.py"
syntax = "python"

[languages.javascript]
pattern = "**/*.{js,jsx,ts,tsx}"
syntax = "javascript"

[languages.json]
pattern = "**/*.json"
syntax = "json"

[languages.css]
pattern = "**/*.css"
syntax = "css"

[languages.html]
pattern = "**/*.html"
syntax = "html"

[deployment]
run = ["sh", "-c", "bash run.sh"]

[[ports]]
localPort = 3000
externalPort = 80
