run = "bash run.sh"
entrypoint = "run.sh"

[nix]
channel = "stable-24.11"

[env]
PYTHONPATH = "/home/runner/$REPL_SLUG/backend"
BACKEND_URL = "https://$REPL_SLUG.$REPL_OWNER.repl.co"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true

[languages]
[languages.python]
pattern = "**/*.py"
syntax = "python"

[languages.javascript]
pattern = "**/*.{js,jsx,ts,tsx}"
syntax = "javascript"

[languages.json]
pattern = "**/*.json"
syntax = "json"

[languages.css]
pattern = "**/*.css"
syntax = "css"

[languages.html]
pattern = "**/*.html"
syntax = "html" 